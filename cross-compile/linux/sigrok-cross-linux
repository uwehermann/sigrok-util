set -e

# Uncomment/set the following to match your cross-toolchain setup.
# TOOLCHAIN=...
# TOOLCHAIN_TRIPLET=...
# C="--host=$TOOLCHAIN_TRIPLET"
# export PATH=$TOOLCHAIN/bin:$PATH

# The path where the compiled packages will be installed.
PREFIX=$HOME/sr_cmake

# The path where to download files to and where to build packages.
BUILDDIR=./build_cmake

# The path where the libsigrok Python bindings will be installed.
PYPATH=$PREFIX/lib/python2.7/site-packages

# Edit this to control verbose build output.
# V="V=1 VERBOSE=1"

# Edit this to enable/disable/modify parallel compiles.
PARALLEL="-j 2"

# Edit this to enable/disable building certain components.
BUILD_SIGROK_FIRMWARE_FX2LAFW=1

# JDK include path. Usually found automatically, except on FreeBSD.
if [ `uname` = "FreeBSD" ]; then
	JDK="--with-jni-include-path=/usr/local/openjdk7/include"
	BUILD_SIGROK_FIRMWARE_FX2LAFW=0 # Missing sdcc.
fi

# Uncomment the following lines to build with clang and run scan-build.
# export CC=clang
# export CXX=clang++
# SB="scan-build -k -v"

# You usually don't need to change anything below this line.

# -----------------------------------------------------------------------------

P="$PREFIX/lib/pkgconfig"
C="$C --prefix=$PREFIX"
CM="$CM -DCMAKE_INSTALL_PREFIX=$PREFIX"

# Remove build directory contents (if any) and create a new build dir.
rm -rf $BUILDDIR
mkdir $BUILDDIR
cd $BUILDDIR

GIT_CLONE="git clone"

REPO_BASE="https://github.com/uwehermann"

# -----------------------------------------------------------------------------

# libserialport
$GIT_CLONE $REPO_BASE/libserialport
cd libserialport
git checkout cmake
mkdir build
cd build
$SB cmake $CM ..
$SB make $PARALLEL $V
make install $V
$SB make test $V
cd ../..

# libsigrok
mkdir -p $PYPATH
$GIT_CLONE $REPO_BASE/libsigrok
cd libsigrok
git checkout cmake
mkdir build
cd build
PKG_CONFIG_PATH=$P $SB cmake $CM ..
# TODO: $JDK
$SB make $PARALLEL $V
PYTHONPATH=$PYPATH $SB make install $V
$SB make test $V
cd ../..

# libsigrokdecode
$GIT_CLONE $REPO_BASE/libsigrokdecode
cd libsigrokdecode
git checkout cmake
mkdir build
cd build
$SB cmake $CM ..
$SB make $PARALLEL $V
make install $V
$SB make test $V
cd ../..

# sigrok-firmware
$GIT_CLONE $REPO_BASE/sigrok-firmware
cd sigrok-firmware
git checkout cmake
mkdir build
cd build
# Nothing gets cross-compiled here, we just need 'make install' basically.
cmake $CM ..
make install $V
cd ../..

if [ $BUILD_SIGROK_FIRMWARE_FX2LAFW = 1 ]; then
# sigrok-firmware-fx2lafw
$GIT_CLONE https://github.com/sigrokproject/sigrok-firmware-fx2lafw
cd sigrok-firmware-fx2lafw
./autogen.sh
mkdir build
cd build
# We're building the fx2lafw firmware on the host, no need to cross-compile.
$SB ../configure $C
make $PARALLEL $V
make install $V
cd ../..
fi

# sigrok-cli
$GIT_CLONE $REPO_BASE/sigrok-cli
cd sigrok-cli
git checkout cmake
mkdir build
cd build
PKG_CONFIG_PATH=$P $SB cmake $CM ..
$SB make $PARALLEL $V
make install $V
cd ../..

# PulseView
$GIT_CLONE $REPO_BASE/pulseview
cd pulseview
git checkout cmake
mkdir build
cd build
PKG_CONFIG_PATH=$P $SB cmake $CM ..
# -DDISABLE_WERROR=y -DENABLE_TESTS=y -DCMAKE_EXPORT_COMPILE_COMMANDS=y ..
$SB make $PARALLEL $V
make install $V
# $SB make test $V
cd ../..
